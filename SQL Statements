-- create a table Coach
CREATE TABLE Coach (
  id varchar(16),
  name varchar(40),
  address varchar(40),
  telephone varchar (20),
  email varchar (40),
  team_id varchar(16),
  specialty varchar(40),
  start_year numeric(4,0),
  PRIMARY KEY (id), 
  FOREIGN KEY (team_id) references Team
);
